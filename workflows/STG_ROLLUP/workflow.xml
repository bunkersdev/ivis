
<workflow-app name="WF_MOSC_DEV_IVIS_STG_ROLLUP" xmlns="uri:oozie:workflow:0.5">
  <global>
      <job-xml>${WF_APP_DIR}/site_xml/hive-site.xml</job-xml>
  </global>
  <credentials>
    <credential name="hcat" type="hcat">
      <property>
        <name>hcat.metastore.uri</name>
        <value>${hcatmetastoreuri}</value>
      </property>
      <property>
        <name>hcat.metastore.principal</name>
        <value>${hcatmetastoreprincipal}</value>
      </property>
    </credential>
    <credential name="hive2" type="hive2">
      <property>
        <name>hive2.jdbc.url</name>
        <value>${hive2jdbcurl}</value>
      </property>
      <property>
        <name>hive2.server.principal</name>
        <value>${hive2serverprincipal}</value>
      </property>
    </credential>
    <credential name="hbase" type="hbase">
    </credential>
  </credentials>
    <start to="START_STG_ROLLUP_TABLES"/>
    <kill name="Kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="LOAD_STG_ONHAND_INTRA" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/stg_inv_onhand_intra.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
              <param>YEAR=${WF_YEAR}</param>
              <param>PERIOD=${WF_PERIOD}</param>
        </hive2>
        <ok to="LOAD_STG_INV_VISIBILITY_ONHAND"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="LOAD_STG_INTER_INTRANSIT" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/stg_inv_inter_intransit.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
              <param>YEAR=${WF_YEAR}</param>
              <param>PERIOD=${WF_PERIOD}</param>
        </hive2>
        <ok to="LOAD_STG_INV_VISIBILITY_INTRANS"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <fork name="START_STG_ROLLUP_TABLES">
        <path start="LOAD_STG_ONHAND_INTRA" />
        <path start="LOAD_STG_INTER_INTRANSIT" />
    </fork>
    <join name="END_STG_ROLLUP_TABLES" to="LOAD_STG_SAP_MATERIAL_DETAIL"/>
    <action name="LOAD_STG_INV_VISIBILITY_ONHAND" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/stg_inv_visibility_onHand.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
              <param>YEAR=${WF_YEAR}</param>
              <param>PERIOD=${WF_PERIOD}</param>
        </hive2>
        <ok to="END_STG_ROLLUP_TABLES"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="LOAD_STG_INV_VISIBILITY_INTRANS" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/stg_inv_visibility_intrans.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
              <param>YEAR=${WF_YEAR}</param>
              <param>PERIOD=${WF_PERIOD}</param>
        </hive2>
        <ok to="END_STG_ROLLUP_TABLES"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="LOAD_STG_SAP_MATERIAL_DETAIL" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/stg_sap_material_detail.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
              <param>YEAR=${WF_YEAR}</param>
              <param>PERIOD=${WF_PERIOD}</param>
        </hive2>
        <ok to="LOAD_HBASE_STG_SAP_MATERIAL_DETAIL"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="LOAD_HBASE_STG_SAP_MATERIAL_DETAIL" cred="hcat,hbase">
        <pig>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
              <job-xml>${WF_APP_DIR}/site_xml/hbase-site.xml</job-xml>
            <script>${WF_APP_DIR}/ivis/scripts/pig/phoenix/stg_sap_material_detail.pig</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>nameNode=${nameNode}</param>
              <param>WF_APP_DIR=${WF_APP_DIR}</param>
              <param>HBASE_DATABASE=${WF_HBASE_DATABASE}</param>
              <param>HBASE_CONFIG=${WF_HBASE_CONFIG}</param>
        </pig>
        <ok to="End"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="JOB_FAILURE_EMAIL">
             <email xmlns="uri:oozie:email-action:0.1">
            <to>${jobFailureEmails}</to>
            <subject>${cluster_name} - JOB FAILURE ${wf:name()}</subject>
            <body>Error message is: [${wf:errorMessage(wf:lastErrorNode())}]
Oozie Workflow Name: ${wf:name()}
External Job Id is ${wf:actionExternalId(wf:lastErrorNode())}
This is an automatic e-mail generated by the job.</body>
        </email>
        <ok to="Kill"/>
        <error to="Kill"/>
    </action>
   <end name="End"/>
</workflow-app>
