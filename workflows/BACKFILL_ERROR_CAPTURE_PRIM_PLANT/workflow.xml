
<workflow-app name="WF_MOSC_[[WF_ENV]]_IVIS_BACKFILL_ERROR_CAPTURE_PRIM_PLANT" xmlns="uri:oozie:workflow:0.5">
  <global>
      <job-xml>${WF_APP_DIR}/site_xml/hive-site.xml</job-xml>
  </global>
  <credentials>
    <credential name="hcat" type="hcat">
      <property>
        <name>hcat.metastore.uri</name>
        <value>${hcatmetastoreuri}</value>
      </property>
      <property>
        <name>hcat.metastore.principal</name>
        <value>${hcatmetastoreprincipal}</value>
      </property>
    </credential>
    <credential name="hive2" type="hive2">
      <property>
        <name>hive2.jdbc.url</name>
        <value>${hive2jdbcurl}</value>
      </property>
      <property>
        <name>hive2.server.principal</name>
        <value>${hive2serverprincipal}</value>
      </property>
    </credential>
    <credential name="hbase" type="hbase">
    </credential>
  </credentials>
    <start to="START_ERROR_CAPTURE"/>
    <kill name="Kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <fork name="START_ERROR_CAPTURE">
        <path start="LOAD_ERROR_TABLE_ONHAND" />
           </fork>
    <action name="LOAD_ERROR_TABLE_ONHAND" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/err_inv_visibility_onHand.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
              <param>YEAR=${WF_YEAR}</param>
              <param>PERIOD=${WF_PERIOD}</param>
        </hive2>
        <ok to="END_ERROR_CAPTURE"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>

    <join name="END_ERROR_CAPTURE" to="SEND_ERROR_MAIL"/>

  <action name="SEND_ERROR_MAIL">
    <shell xmlns="uri:oozie:shell-action:0.1">
      <job-tracker>${jobTracker}</job-tracker>
      <name-node>${nameNode}</name-node>
      <exec>send_err_inv_visibility.sh</exec>
      <argument>${WF_DATA_DIR}</argument>
      <argument>${WF_DATABASE}</argument>
      <file>${WF_APP_DIR}/ivis/scripts/shell/staging/send_err_inv_visibility.sh#send_err_inv_visibility.sh</file>
      <capture-output/>
    </shell>
    <ok to="RENAME_FILE"/>
    <error to="JOB_FAILURE_EMAIL"/>
  </action>
  <action name="RENAME_FILE">
        <fs>
              <move source='${nameNode}${WF_DATA_DIR}/ivis/temp/send_err_inv_visibility/000000_0' target='${nameNode}${WF_DATA_DIR}/ivis/temp/send_err_inv_visibility/Error_Primary_Plant.csv'/>
        </fs>
        <ok to="email-3a5e"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
        <action name="email-3a5e">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${errorOverrideEmails}</to>
            <subject>IVIS - Errored Primary Plants</subject>
            <body>See the attached file for material and plant combinations where primary plant is null.</body>
            <attachment>${nameNode}${WF_DATA_DIR}/ivis/temp/send_err_inv_visibility/Error_Primary_Plant.csv</attachment>
        </email>
        <ok to="End"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    
    
    <action name="JOB_FAILURE_EMAIL">
         <email xmlns="uri:oozie:email-action:0.1">
            <to>${jobFailureEmails}</to>
            <subject>${cluster_name} - JOB FAILURE ${wf:name()}</subject>
            <body>Error message is: [${wf:errorMessage(wf:lastErrorNode())}]
Oozie Workflow Name: ${wf:name()}
External Job Id is ${wf:actionExternalId(wf:lastErrorNode())}
This is an automatic e-mail generated by the job.</body>
        </email>
        <ok to="Kill"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>
