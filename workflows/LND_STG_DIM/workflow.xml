<workflow-app name="WF_MOSC_[[WF_ENV]]_IVIS_LND_STG_DIM" xmlns="uri:oozie:workflow:0.5">
  <global>
      <job-xml>${WF_APP_DIR}/site_xml/hive-site.xml</job-xml>
  </global>
  <credentials>
    <credential name="hcat" type="hcat">
      <property>
        <name>hcat.metastore.uri</name>
        <value>${hcatmetastoreuri}</value>
      </property>
      <property>
        <name>hcat.metastore.principal</name>
        <value>${hcatmetastoreprincipal}</value>
      </property>
    </credential>
    <credential name="hive2" type="hive2">
      <property>
        <name>hive2.jdbc.url</name>
        <value>${hive2jdbcurl}</value>
      </property>
      <property>
        <name>hive2.server.principal</name>
        <value>${hive2serverprincipal}</value>
      </property>
    </credential>
    <credential name="hbase" type="hbase">
    </credential>
  </credentials>
    <start to="START_JDA_STG_DIM"/>
    <kill name="Kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <fork name="START_SAP_STG_DIM">
        <path start="LOAD_STG_PLANT_COMPANY" />
        <path start="LOAD_STG_MATMAS_HISTORY" />
        <path start="LOAD_STG_PRIM_PLANT_LOOKUP" />
    <!--     <path start="CALENDAR_ITEM_TCGM" />
        <path start="LOC_BSNS_EXCHANGE" />
        <path start="STG_ITEM_D56" />
        <path start="USR_PERMISSION_ACCESS" /> -->
  </fork>
   <fork name="START_JDA_STG_DIM">
        <path start="CALENDAR_ITEM_TCGM" />
        <path start="LOC_BSNS_EXCHANGE" />
        <path start="STG_ITEM_D56" />
        <path start="USR_PERMISSION_ACCESS" />

  </fork>
   <join name="JOIN_JDA_STG_DIM" to="START_SAP_STG_DIM"/>
  <action name="CALENDAR_ITEM_TCGM">
    <sub-workflow>
      <app-path>${nameNode}${WF_APP_DIR}/ivis/workflows/JDA_CALENDAR_ITEM_TCGM</app-path>
      <propagate-configuration/>
      </sub-workflow>
    <ok to="JOIN_JDA_STG_DIM"/>
    <error to="JOB_FAILURE_EMAIL"/>
  </action>
  <action name="LOC_BSNS_EXCHANGE">
    <sub-workflow>
      <app-path>${nameNode}${WF_APP_DIR}/ivis/workflows/JDA_LOC_BSNS_EXCHANGE</app-path>
      <propagate-configuration/>
      </sub-workflow>
    <ok to="JOIN_JDA_STG_DIM"/>
    <error to="JOB_FAILURE_EMAIL"/>
  </action>
  <action name="STG_ITEM_D56">
    <sub-workflow>
      <app-path>${nameNode}${WF_APP_DIR}/ivis/workflows/JDA_STG_ITEM_D56</app-path>
      <propagate-configuration/>
      </sub-workflow>
    <ok to="JOIN_JDA_STG_DIM"/>
    <error to="JOB_FAILURE_EMAIL"/>
  </action>
  <action name="USR_PERMISSION_ACCESS">
    <sub-workflow>
      <app-path>${nameNode}${WF_APP_DIR}/ivis/workflows/JDA_USR_PERMISSION_ACCESS</app-path>
      <propagate-configuration/>
      </sub-workflow>
    <ok to="JOIN_JDA_STG_DIM"/>
    <error to="JOB_FAILURE_EMAIL"/>
  </action>
    <join name="END_STG_DIM" to="End"/>
    <action name="LOAD_STG_MATMAS" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/stg_sap_material_master.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
        </hive2>
        <ok to="END_STG_DIM"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="LOAD_STG_PLANT_COMPANY" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/stg_sap_plant_company_master.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
        </hive2>
        <ok to="LOAD_HBASE_STG_PLANT_COMPANY"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="LOAD_HBASE_STG_PLANT_COMPANY" cred="hcat,hbase">
        <pig>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
              <job-xml>/applications/ivis/site_xml/hbase-site.xml</job-xml>
            <script>${WF_APP_DIR}/ivis/scripts/pig/phoenix/stg_sap_plant_company_master.pig</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>nameNode=${nameNode}</param>
              <param>WF_APP_DIR=${WF_APP_DIR}</param>
              <param>HBASE_DATABASE=${WF_HBASE_DATABASE}</param>
              <param>HBASE_CONFIG=${WF_HBASE_CONFIG}</param>
        </pig>
        <ok to="END_STG_DIM"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="LOAD_STG_PRIM_PLANT_LOOKUP" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/stg_primary_plant_lookup.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
        </hive2>
        <ok to="LOAD_HBASE_STG_PRIM_PLANT_LOOKUP"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="LOAD_HBASE_STG_PRIM_PLANT_LOOKUP" cred="hcat,hbase">
        <pig>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
              <job-xml>${WF_APP_DIR}/site_xml/hbase-site.xml</job-xml>
            <script>${WF_APP_DIR}/ivis/scripts/pig/phoenix/stg_primary_plant_lookup.pig</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>HBASE_DATABASE=${WF_HBASE_DATABASE}</param>
              <param>nameNode=${nameNode}</param>
              <param>WF_APP_DIR=${WF_APP_DIR}</param>
              <param>HBASE_CONFIG=${WF_HBASE_CONFIG}</param>
        </pig>
        <ok to="END_STG_DIM"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    
    <action name="JOB_FAILURE_EMAIL">
             <email xmlns="uri:oozie:email-action:0.1">
            <to>${jobFailureEmails}</to>
            <subject>${cluster_name} - JOB FAILURE ${wf:name()}</subject>
            <body>Error message is: [${wf:errorMessage(wf:lastErrorNode())}]
Oozie Workflow Name: ${wf:name()}
External Job Id is ${wf:actionExternalId(wf:lastErrorNode())}
This is an automatic e-mail generated by the job.</body>
        </email>
        <ok to="Kill"/>
        <error to="Kill"/>
    </action>
    
    <action name="LOAD_STG_MATMAS_HISTORY" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/stg_sap_material_master_history.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
        </hive2>
        <ok to="LOAD_STG_MATMAS"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <end name="End"/>
</workflow-app>
