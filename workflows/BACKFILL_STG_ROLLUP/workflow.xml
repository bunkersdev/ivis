<workflow-app name="WF_MOSC_[[WF_ENV]]_IVIS_STG_ROLLUP_BACKFILL" xmlns="uri:oozie:workflow:0.5">
  <global>
      <job-xml>${WF_APP_DIR}/site_xml/hive-site.xml</job-xml>
  </global>
  <credentials>
    <credential name="hive2" type="hive2">
      <property>
        <name>hive2.jdbc.url</name>
        <value>${hive2jdbcurl}</value>
      </property>
      <property>
        <name>hive2.server.principal</name>
        <value>${hive2serverprincipal}</value>
      </property>
    </credential>
   </credentials>
    <start to="LOAD_STG_ONHAND_INTRA"/>
    <kill name="Kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="LOAD_STG_ONHAND_INTRA" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/stg_inv_onhand_intra.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
              <param>YEAR=${WF_YEAR}</param>
              <param>PERIOD=${WF_PERIOD}</param>
        </hive2>
        <ok to="LOAD_STG_INV_VISIBILITY_ONHAND"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="LOAD_STG_INV_VISIBILITY_ONHAND" cred="hive2">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <jdbc-url>${hive2jdbcurl}</jdbc-url>
            <script>${WF_APP_DIR}/ivis/scripts/hive/staging/stg_inv_visibility_onHand.sql</script>
              <param>DATABASE=${WF_DATABASE}</param>
              <param>USER_NAME=${WF_USER_NAME}</param>
              <param>YEAR=${WF_YEAR}</param>
              <param>PERIOD=${WF_PERIOD}</param>
        </hive2>
        <ok to="End"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="JOB_FAILURE_EMAIL">
        <email xmlns="uri:oozie:email-action:0.1">
            <to>${jobFailureEmails}</to>
            <subject>${cluster_name} - JOB FAILURE ${wf:name()}</subject>
            <body>Error message is: [${wf:errorMessage(wf:lastErrorNode())}]
Oozie Workflow Name: ${wf:name()}
External Job Id is ${wf:actionExternalId(wf:lastErrorNode())}
This is an automatic e-mail generated by the job.</body>
        </email>
        <ok to="Kill"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>
