
<workflow-app name="WF_MOSC_DEV_IVIS_SAP_LND_DLY" xmlns="uri:oozie:workflow:0.5">
    <start to="START_SAP_LND_LOAD"/>
    <kill name="Kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="LOAD_INTRANSIT_DLY">
        <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>transfer_lnd_inv_intransit_dly.sh</exec>
              <argument>${WF_DATA_DIR}</argument>
            <file>${WF_APP_DIR}/ivis/scripts/shell/landing/transfer_lnd_inv_intransit_dly.sh#transfer_lnd_inv_intransit_dly.sh</file>
              <capture-output/>
        </shell>
        <ok to="END_SAP_LND_LOAD"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="LOAD_ONHAND_DLY">
        <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>transfer_lnd_inv_onhand_dly.sh</exec>
              <argument>${WF_DATA_DIR}</argument>
            <file>${WF_APP_DIR}/ivis/scripts/shell/landing/transfer_lnd_inv_onhand_dly.sh#transfer_lnd_inv_onhand_dly.sh</file>
              <capture-output/>
        </shell>
        <ok to="END_SAP_LND_LOAD"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <fork name="START_SAP_LND_LOAD">
        <path start="LOAD_INTRANSIT_DLY" />
        <path start="LOAD_ONHAND_DLY" />
        <path start="LOAD_PLANT_COMPANY_MASTER" />
        <path start="LOAD_MATMAS" />
        <path start="LOAD_STG_PRIM_PLANT_LOOKUP" />
    </fork>
    <join name="END_SAP_LND_LOAD" to="End"/>
    <action name="LOAD_PLANT_COMPANY_MASTER">
        <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>transfer_lnd_sap_plant_company_master.sh</exec>
              <argument>${WF_DATA_DIR}</argument>
            <file>${WF_APP_DIR}/ivis/scripts/shell/landing/transfer_lnd_sap_plant_company_master.sh#transfer_lnd_sap_plant_company_master.sh</file>
              <capture-output/>
        </shell>
        <ok to="END_SAP_LND_LOAD"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
      <action name="LOAD_STG_PRIM_PLANT_LOOKUP">
    <sub-workflow>
      <app-path>${nameNode}${WF_APP_DIR}/ivis/workflows/STG_PRIMARY_PLANT_LOOKUP</app-path>
      <propagate-configuration/>
      </sub-workflow>
    <ok to="END_SAP_LND_LOAD"/>
    <error to="Kill"/>
  </action>
   <action name="LOAD_MATMAS">
        <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>transfer_lnd_sap_material_master.sh</exec>
              <argument>${WF_DATA_DIR}</argument>
            <file>${WF_APP_DIR}/ivis/scripts/shell/landing/transfer_lnd_sap_material_master.sh#transfer_lnd_sap_material_master.sh</file>
              <capture-output/>
        </shell>
        <ok to="END_SAP_LND_LOAD"/>
        <error to="JOB_FAILURE_EMAIL"/>
    </action>
    <action name="JOB_FAILURE_EMAIL">
             <email xmlns="uri:oozie:email-action:0.1">
            <to>${jobFailureEmails}</to>
            <subject>${cluster_name} - JOB FAILURE ${wf:name()}</subject>
            <body>Error message is: [${wf:errorMessage(wf:lastErrorNode())}]
Oozie Workflow Name: ${wf:name()}
External Job Id is ${wf:actionExternalId(wf:lastErrorNode())}
This is an automatic e-mail generated by the job.</body>
        </email>
        <ok to="Kill"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>
